{
  "manifest_version": 3,
  "name": "CV AutoFill",
  "version": "1.0",
  "description": "Automatyczne wype≈Çnianie formularzy aplikacyjnych na podstawie CV w formacie JSON.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions":[
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://solid.jobs/*", "https://*.traffit.com/*", "https://*.erecruiter.pl/*", "https://*/*"],
      "js": ["mappers/solidJobsMapper.js", "mappers/traffitMapper.js", "mappers/eRecruiterMapper.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}

